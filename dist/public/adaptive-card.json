{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "/icon-72x72.png",
                  "size": "small",
                  "style": "person"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Siraha Bazaar",
                  "weight": "bolder",
                  "size": "medium"
                },
                {
                  "type": "TextBlock",
                  "text": "Quick Orders Widget",
                  "isSubtle": true,
                  "spacing": "none"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "medium",
      "items": [
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Pending Orders:",
              "value": "${pendingOrders}"
            },
            {
              "title": "Delivered Today:",
              "value": "${deliveredToday}"
            },
            {
              "title": "Total Revenue:",
              "value": "â‚¹${totalRevenue}"
            },
            {
              "title": "New Notifications:",
              "value": "${newNotifications}"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "Recent Activity",
          "weight": "bolder",
          "size": "small"
        },
        {
          "type": "TextBlock",
          "text": "${recentActivity}",
          "wrap": true,
          "isSubtle": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "View All Orders",
      "url": "/orders"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Dashboard",
      "url": "/dashboard"
    }
  ]
}